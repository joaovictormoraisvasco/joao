  <script>
    /* Fun√ß√£o para movimentar as pupilas seguindo cursor */
    document.addEventListener('mousemove', e => {
      [1,2].forEach(i => {
        const pupila = document.getElementById('pupila'+i);
        const rect = pupila.getBoundingClientRect();
        const dx = e.clientX - (rect.left + rect.width/2);
        const dy = e.clientY - (rect.top + rect.height/2);
        const ang = Math.atan2(dy, dx);
        const dist = 4;
        pupila.style.transform = `translate(${Math.cos(ang)*dist}px, ${Math.sin(ang)*dist}px)`;
      });
    });

    /* Toggle da se√ß√£o de causas e efeitos */
    function mostrarSecaoCausas() {
      const sec = document.getElementById('secaoCausas');
      sec.style.display = sec.style.display === 'block' ? 'none' : 'block';
    }

    /* Toggle do menu lateral */
    function toggleMenu() {
      const menu = document.getElementById('menuLateral');
      menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    /* Fecha menu ao clicar fora */
    window.onclick = e => {
      if (!e.target.closest('.botao-menu')) {
        const menu = document.getElementById('menuLateral');
        if (menu && menu.style.display === 'block') menu.style.display = 'none';
      }
    };
  </script>
